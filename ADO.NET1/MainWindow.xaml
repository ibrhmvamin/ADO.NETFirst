<Window x:Class="ADO.NET1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO.NET1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="catcmb" Width="90" Margin="40" SelectionChanged="ChangeSelection"/>
                <ComboBox x:Name="bookcmb" Width="90" Margin="40"/>
            </StackPanel>
            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBox x:Name="txtbox" Width="200" Height="30" HorizontalAlignment="Left" Margin="10"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="submitbtn" Width="80" Margin="2" Height="40" Content="Submit" HorizontalAlignment="Center" Click="ButtonClick"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
